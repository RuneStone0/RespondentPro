rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      // Allow read for email lookup (needed for login)
      allow read: if isAuthenticated();
    }
    
    // Session keys - users can only access their own session keys
    match /session_keys/{sessionKeyId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // Projects cache - users can only access their own cached projects
    match /projects_cache/{cacheId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // User preferences - users can only access their own preferences
    match /user_preferences/{prefId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // Hidden projects log - users can only access their own hidden projects
    match /hidden_projects_log/{logId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // Hide feedback - users can only access their own feedback
    match /hide_feedback/{feedbackId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // Category recommendations - users can only access their own recommendations
    match /category_recommendations/{recId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // User profiles - users can only access their own profile
    match /user_profiles/{profileId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // Project details - read-only for authenticated users, write for owners
    match /project_details/{projectId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (!request.resource.exists || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Topics - read for authenticated users, write for owners
    match /topics/{topicId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (!request.resource.exists || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // AI analysis cache - users can only access their own cache
    match /ai_analysis_cache/{cacheId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
    
    // User notifications - users can only access their own notifications
    match /user_notifications/{notifId} {
      allow read, write: if isAuthenticated() && 
        resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.user_id == request.auth.uid;
    }
  }
}
